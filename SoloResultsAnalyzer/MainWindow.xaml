<Window x:Class="SoloResultsAnalyzer.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="350" Width="525">
    <Grid>
        <StackPanel Orientation="Vertical">
            <StackPanel Orientation="Horizontal">
                <Label Content="File:" />
                <TextBox Text="{Binding FileName}" Width="100" />
            </StackPanel>
            <Button Content="Open File" Command="{Binding OpenFile}" />
            <Button Content="Update Classes" Command="{Binding UpdateClasses}" />
            <Button Content="Update Runs" Command="{Binding UpdateRuns}" />
            <Button Content="Pax Report" Command="{Binding GenerateEventPaxReport}" />
            <Button Content="Raw Report" Command="{Binding GenerateEventRawReport}" />
            <Button Content="Class Report" Command="{Binding GenerateEventClassReport}" />
        </StackPanel>
    </Grid>
</Window>
