<Window x:Class="SoloResultsAnalyzer.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="350" Width="525">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*" />
            <ColumnDefinition Width="1*" />
            <ColumnDefinition Width="1*" />
            <ColumnDefinition Width="1*" />
        </Grid.ColumnDefinitions>

        <Label Grid.Column="0" Grid.ColumnSpan="4" Grid.Row="0" Content="Title" HorizontalAlignment="Center" VerticalAlignment="Center" />

        <StackPanel Grid.Column="1" Grid.Row="1" Orientation="Vertical" Margin="5">
            <Label Content="Season"  HorizontalAlignment="Center"/>
            <ComboBox />
        </StackPanel>

        <StackPanel Grid.Column="2" Grid.Row="1" Orientation="Vertical" Margin="5">
            <Label Content="Event"  HorizontalAlignment="Center"/>
            <ComboBox />
        </StackPanel>

        <UniformGrid Grid.Row="2" Grid.Column="0" Grid.ColumnSpan="4" Grid.RowSpan="2">
            <Button Content="Import Runs" Command="{Binding UpdateRuns}" Margin="5" />
            <Button Content="Pax Report" Command="{Binding GenerateEventPaxReport}" Margin="5" />
            <Button Content="Raw Report" Command="{Binding GenerateEventRawReport}" Margin="5" />
            <Button Content="Class Report" Command="{Binding GenerateEventClassReport}" Margin="5" />
            <Button Content="Ladies Report" Command="{Binding GenerateEventLadiesReport}" Margin="5" />
            <Button Content="Novice Report" Command="{Binding GenerateEventNoviceReport}" Margin="5" />
            <Button Content="Update Classes" Command="{Binding UpdateClasses}" Margin="5" />

        </UniformGrid>

    </Grid>
</Window>
